set -eou pipefail

function usage() {
  cat <<DOC
Usage: ${0##*/} SUBCOMMAND

SUBCOMMANDS:
    update        Update the ci-studio-common install.
    allow USER    Allow USER to perform ci-studio-common-util operations with sudo.
DOC
}

function allow_user() {
  user=${1:?missing parameter: user to allow to perform operations}
  file-mod append-if-missing "$user ALL=NOPASSWD:SETENV: /usr/bin/ci-studio-common-util" "/etc/sudoers.d/$user"
}

function symlink_bins() {
  if [[ -w /usr/bin ]]; then
    ln -sf /opt/ci-studio-common/bin/* /usr/bin
  else
    echo "\

=== WARNING ===

ci-studio-common does not have permission to install binaries into /usr/bin.
Please make sure to add /opt/ci-studio-common/bin to your PATH.

  export PATH=$PATH:/opt/ci-studio-common/bin

"
  fi
}

function update_install() {
  if [[ -s "/var/opt/ci-studio-common/.install-branch" ]]; then
    branch=$(cat /var/opt/ci-studio-common/.install-branch)
  else
    branch="master"
  fi

  echo "Updating 'ci-studio-common' install to latest from '$branch' branch"
  # There is probably a better way to handle the issue where multiple agents are all trying to update ci-studio-common
  # on a single machine at once, but this is the quickest way to unblock current pipelines.
  cd /opt/ci-studio-common && (git pull --rebase origin "$branch" && symlink_bins) || echo "Could not update ci-studio-common -- ignoring"
}

case "${1:-}" in
  "allow")
    allow_user "$2"
    ;;
  "update")
    update_install
    ;;
  "-h"|"--help")
    usage
    ;;
  "")
    usage
    exit 1
    ;;
  *)
    echo "${0##*/}: invalid option '$1'"
    echo "Try '${0##*/} --help' for more information."
    exit 2
esac
