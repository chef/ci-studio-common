function usage() {
  cat /dev/stdin <<DOC
Usage: ${0##*/} FILE

A Bash utility that prints the contents of the given FILE from the CITADEL_BUCKET in S3 to STDOUT.

ENVIRONMENT VARIABLES:
    CITADEL_BUCKET      The name of the S3 bucket where citadel files are kept. (default: chef-cd-citadel)
    CITADEL_PROFILE     The name of the AWS CLI profile with access to citadel. (default: chef-cd)
DOC
}

function enforce_requirements() {
  # Make sure the AWS CLI is installed
  which aws >/dev/null &2>1
  if [[ $? -ne 0 ]]; then
    echo "${0##*/}: Unable to find 'aws' executable."
    echo "Make sure you have the aws cli installed. Try 'install-tool aws'."
    exit 2
  fi
}

case "$1" in
  "-h"|"--help"|"")
    usage
    ;;
  *)
    profile="${CITADEL_PROFILE:-chef-cd}"
    bucket="${CITADEL_BUCKET:-chef-cd-citadel}"
    file="$1"

    aws s3 cp --profile $profile s3://$bucket/$file -
    ;;
esac
