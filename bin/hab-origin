case "$1" in
  "download-sig-key")
    # This function assumes that the credentials have been placed as required by the aws cli
    bucket="${AWS_S3_BUCKET:-chef-ci-studio-common}"
    origin="${2:-chef}"

    # Create the keys directory if it is missing
    [ ! -d "$HOME/.hab/cache/keys" ] && mkdir -p "$HOME/.hab/cache/keys"

    # Make sure we have the public signing key
    hab origin key download "$origin"

    # Extract the name of the key+revision from the public key
    key_with_revision=$(find "$HOME/.hab/cache/keys" -name "$origin-20*.pub" -exec basename {} \; | cut -d'.' -f1)

    if [ ! -f "$HOME/.hab/cache/keys/${key_with_revision}.sig.key" ]
    then
      # Download the key from the S3 bucket
      aws s3 cp "s3://$bucket/${key_with_revision}.sig.key" "$HOME/.hab/cache/keys/${key_with_revision}.sig.key"
    fi
    ;;
  *)
    ;;
esac
