set -eou pipefail

function usage() {
  cat <<DOC
Usage: ${0##*/} [SUBCOMMAND]

  This utility has been deprecated. If you need to inject secrets into your hab studio,
  please use the HAB_STUDIO_SECRET_ functionality.
DOC
}

case "${1:-}" in
  "configure-github-account")
    configure-github-account "$2"
    ;;
  *)
    usage
    ;;
esac
