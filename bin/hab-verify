case "$1" in
  "in-studio")
    origin=${HAB_ORIGIN:-chef}
    export HAB_ORIGIN="$origin"

    studio_cmd="-k $origin"

    if [[ -z "$STUDIO_OPTS" ]]; then
      studio_cmd="$studio_cmd $STUDIO_OPTS"
    fi

    hab-origin download-sig-key "$origin"
    eval "hab studio $studio_cmd run $2"
    ;;
  "lint")
    exec find . -name 'plan.sh' -exec shellcheck -e SC2034,SC2154 -s bash {} \;
    ;;
  "syntax")
    exec find . -name 'plan.sh' -exec bash -n {} \;
    ;;
  *)
    echo "'$1' is not a supported command."
esac
