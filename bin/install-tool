set -eou pipefail

INSTALL_TOOL_DIR="${INSTALL_TOOL_DIR:-$HOME/ci-studio-common/tools}"

function usage() {
  cat <<DOC
Usage: ${0##*/} TOOL [VERSION]

Install one of the pre-configured TOOLs (listed below) at the specified VERSION (if specified).

AVAILABLE TOOLS:
    chefdk [CHANNEL]
    hab

DEPRECATED TOOLS:
    aws
    docker-compose [VERSION]
    terraform [VERSION]
DOC
}

function install_tool() {
  # Create the tools bin directory
  mkdir -p "$HOME/tools/bin"

  # Install the TOOL
  tool="$1"
  param="${2:-}"
  tool_file="$INSTALL_TOOL_DIR/$tool/install.sh"

  if [[ ! -f "$tool_file" ]]; then
    usage
    exit 1
  else
    ceval "bash $tool_file $param"
  fi
}

case "${1:-}" in
  "-h"|"--help")
    usage
    ;;
  "")
    usage
    exit 1
    ;;
  *)
    install_tool "$@"
    ;;
esac
